@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "验证手机号码";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword" method="get">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName">手机号码</label>
                <input asp-for="UserName" disabled class="form-control" />
                <label asp-for="VerificationCode">验证码</label>
                <input asp-for="VerificationCode" class="form-control"/>
                <span class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">提交</button>
        </form>
    </div>
</div>
